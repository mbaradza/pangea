<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/toolbar" />

        <Button
            android:id="@+id/btn_submit"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selectable_item_background"
            android:text="Submit"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="PMTCT ART Form"
            android:textStyle="bold" />

        <TextView
            style="@style/TextViewInputStyle"
            android:text="Select Facility"></TextView>

        <Spinner
            android:id="@+id/facility"
            style="@style/SpinnerStyle" />

        <TextView
            style="@style/TextViewInputStyle"
            android:text="Select Period"></TextView>

        <Spinner
            android:id="@+id/period"
            style="@style/SpinnerStyle" />

        <TextView
            style="@style/TextViewInputStyle"
            android:text="Date Completed" />

        <EditText
            android:id="@+id/dateCreated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Date Completed" />

        <TextView
            style="@style/TextViewInputStyle"
            android:text="Name" />

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="?android:attr/dividerHorizontal" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="1. Numerator"
                android:paddingBottom="@dimen/fab_margin" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="a. Routine"
                android:paddingBottom="@dimen/fab_margin" />

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Routine Numerator Pregnant"
                    android:paddingBottom="@dimen/activity_height" />

                <EditText
                    android:id="@+id/routineNumeratorPregnant"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:hint="F"
                    android:inputType="number" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Routine Numerator Breast Feeding"
                    android:paddingBottom="@dimen/activity_height" />

                <EditText
                    android:id="@+id/routineNumeratorBreastFeeding"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:hint="F"
                    android:inputType="number" />

            </TableRow>

            <Button
                android:id="@+id/btn_question_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="?android:attr/dividerHorizontal" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="b. Target"
                android:paddingBottom="@dimen/fab_margin" />

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Target Numerator Pregnant"
                    android:paddingBottom="@dimen/activity_height" />

                <EditText
                    android:id="@+id/targetNumeratorPregnant"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:hint="N"
                    android:inputType="number" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Target Numerator Breast Feeding"
                    android:paddingBottom="@dimen/activity_height" />

                <EditText
                    android:id="@+id/targetNumeratorBreastFeeding"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:hint="F"
                    android:inputType="number" />

            </TableRow>

            <Button
                android:id="@+id/btn_question_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="?android:attr/dividerHorizontal" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="2. Denominator"
                android:paddingBottom="@dimen/fab_margin" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="a. Routine"
                android:paddingBottom="@dimen/fab_margin" />

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Routine Denominator Pregnant"
                    android:paddingBottom="@dimen/activity_height" />

                <EditText
                    android:id="@+id/routineDenominatorPregnant"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:hint="F"
                    android:inputType="number" />

            </TableRow>


            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Routine Denominator Breast Feeding"
                    android:paddingBottom="@dimen/activity_height" />

                <EditText
                    android:id="@+id/routineDenominatorBreastFeeding"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:hint="F"
                    android:inputType="number" />

            </TableRow>

            <Button
                android:id="@+id/btn_question_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="?android:attr/dividerHorizontal" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="a. Routine"
                android:paddingBottom="@dimen/fab_margin" />

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Target Denominator Pregnant"
                    android:paddingBottom="@dimen/activity_height" />

                <EditText
                    android:id="@+id/targetDenominatorPregnant"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:hint="F"
                    android:inputType="number" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Target Denominator Breast Feeding"
                    android:paddingBottom="@dimen/activity_height" />

                <EditText
                    android:id="@+id/targetDenominatorBreastFeeding"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:hint="F"
                    android:inputType="number" />

            </TableRow>


            <Button
                android:id="@+id/btn_question_four"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_save"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selectable_item_background"
                android:text="Save"
                android:textColor="@color/white" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/dividerHorizontal" />

            <Button
                android:id="@+id/btn_completed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@null"
                android:drawablePadding="16dp"
                android:drawableTop="@mipmap/ic_check"
                android:text="Submitted"
                android:textAllCaps="false"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

        </TableLayout>

    </LinearLayout>
</ScrollView>
