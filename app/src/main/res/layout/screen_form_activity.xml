<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/toolbar" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="Description: Percentage of HIV-positive new and relapsed registered TB cases on ART during TB treatment"
            android:textStyle="bold" />

        <TextView
            style="@style/TextViewInputStyle"
            android:text="Select Facility"></TextView>

        <Spinner
            android:id="@+id/facility"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Period" />

                <Spinner
                    android:id="@+id/period"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Date Completed" />

                <EditText
                    android:id="@+id/dateCreated"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Date Completed" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip">


                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Name" />

                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Name" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_span="2"
                    android:text="1. The number of PLHIV who were screened for TB symptoms at the last clinical visit to an HIV care facility during the reporting period."
                    android:textStyle="bold" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Numerator" />

                <EditText
                    android:id="@+id/numerator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_span="2"
                    android:text="2. The number of PLHIV who screened positive for TB."
                    android:textStyle="bold" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="TB Status" />

                <EditText
                    android:id="@+id/tbStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_span="2"
                    android:text="3. The number of patients that had a specimen sent for bacteriologic diagnosis of active TB"
                    android:textStyle="bold" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Specimen Sent" />

                <EditText
                    android:id="@+id/specimentSent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_span="2"
                    android:text="4. Disaggregated by Diagnostic Test"
                    android:textStyle="bold" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Smear" />

                <EditText
                    android:id="@+id/smear"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:hint="Smear"
                    android:inputType="number" />

            </TableRow>


            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Xpert" />

                <EditText
                    android:id="@+id/xpert"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:hint="Less 15"
                    android:inputType="number" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Other" />

                <EditText
                    android:id="@+id/others"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:hint="other"
                    android:inputType="number" />

            </TableRow>


            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_span="2"
                    android:text="5. Fine Disaggregation by Age Male and Female"
                    android:textStyle="bold" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:text=""
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:text="Female"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:text="Male"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/lessOne" />

                <EditText
                    android:id="@+id/femaleLessThanOne"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:hint="F"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/maleLessThanOne"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:hint="M"
                    android:inputType="number" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/oneToFour" />

                <EditText
                    android:id="@+id/femaleOneToFour"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:hint="F"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/maleOneToFour"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:hint="M"
                    android:inputType="number" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/fiveToNine" />

                <EditText
                    android:id="@+id/femaleFiveToNine"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:hint="F"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/maleFiveToNine"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:hint="M"
                    android:inputType="number" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/tenToFourteen" />

                <EditText
                    android:id="@+id/femaleTenToFourteen"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:hint="F"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/maleTenToFourteen"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:hint="M"
                    android:inputType="number" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/fifteenToNineteen" />

                <EditText
                    android:id="@+id/femaleFifteenToNineteen"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:hint="F"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/maleFifteenToNineteen"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:hint="M"
                    android:inputType="number" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/twentyPlus" />

                <EditText
                    android:id="@+id/femaleTwentyPlus"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:hint="F"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/maleTwentyPlus"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:hint="M"
                    android:inputType="number" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip">

                <Button
                    android:id="@+id/btn_save"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_span="2"
                    android:text="Save" />

            </TableRow>

        </TableLayout>


    </LinearLayout>
</ScrollView>
